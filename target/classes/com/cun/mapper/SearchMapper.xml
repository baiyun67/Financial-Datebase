<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cun.mapper.SearchMapper">

    <select id="FindByCondition" parameterType="com.cun.pojo.Financial" resultType="com.cun.pojo.Financial">
        select * from information
        <where>
            <if test="id != null and id !=''">
                AND id = #{id}
            </if>

            <if test="financeType != null">
                AND finance_type = #{financeType}
            </if>

            <if test="amount != null">
                AND amount = #{amount}
            </if>

            <if test="date != null">
                AND date = #{date}
            </if>

            <if test="dealName != null and dealName!=''">
                AND deal_name=#{dealName}
            </if>

            <if test="remark != null and remark !=''">
                AND remark = #{remark}
            </if>
        </where>
    </select>


</mapper>