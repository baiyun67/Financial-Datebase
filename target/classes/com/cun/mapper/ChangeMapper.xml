<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cun.mapper.ChangeMapper">

    <update id="UpdateById" parameterType="com.cun.pojo.Financial">
        update information
        <set>
            <if test="financeType != null">
                finance_type = #{financeType},
            </if>

            <if test="amount != null">
                amount = #{amount},
            </if>

            <if test="date != null">
                date = #{date},
            </if>

            <if test="dealName != null and dealName != ''">
                deal_name = #{dealName},
            </if>

            <if test="remark != null and remark != ''">
                remark = #{remark},
            </if>
        </set>
        WHERE id = #{id}
    </update>

</mapper>